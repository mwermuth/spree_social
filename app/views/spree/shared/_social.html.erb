
<% Spree::AuthenticationMethod.available_for(@user).each do |method| %>
  <% img = "store/#{method.provider}_32.png" %>
  <%= link_to(image_tag(img, :size => "32x32", :alt => "#{method.provider}"), spree.user_omniauth_authorize_url(provider: method.provider), :title => Spree.t(:sign_in_with)) if method.active %>
<% end %>
